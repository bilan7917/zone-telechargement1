{
  "manifest_version": 2,
  "permissions": ["<all_urls>","storage", "clipboardWrite"],                
  "name": "ZT100pub",
  "version": "1.4",
  "description": "Décode les liens des pages ZT pour accès direct à l'hébergeur",
  "icons": {
    "64": "icons/zt100pub64.png"
  },  
  "options_ui": {
    "page": "options/options.html"
  },  
  "browser_action": {
  "default_icon": "icons/zt100pub64.png",
  "default_title": "ZT100Pub",
  "default_popup": "popup/choose.html"
  },
  "applications": {
    "gecko": {
      "id": "zt100pub@nux-zt100pub.org",
      "strict_min_version": "42.0"
      }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
  {
      "matches": ["*://*.zone-telechargement1.com/*"],
      "css":     ["content.css"],
      "js":      ["content.js"]
      }
    ]
}
